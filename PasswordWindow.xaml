<Window x:Class="QuickPaste.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="220" Width="400"
        ResizeMode="NoResize" Loaded="Window_Loaded"
        Background="#333333" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Please enter your password:" Margin="0,0,0,20" FontSize="15" Foreground="White" />
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" FontSize="15" Foreground="Black" Background="White"
                     KeyDown="PasswordBox_KeyDown" />
        <Button Content="Confirm" Width="100" Margin="0,20,0,0" Click="ConfirmButton_Click" HorizontalAlignment="Right" FontSize="15"
                Background="#1E90FF" Foreground="White" BorderBrush="#1C86EE">
        </Button>
    </StackPanel>
</Window>